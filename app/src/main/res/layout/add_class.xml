<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="405dp"
        android:layout_height="52dp"
        android:onClick="confirmClicked"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/et_course_grade"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/et_course_grade"
        app:layout_constraintTop_toBottomOf="@+id/et_course_weight"
        app:layout_constraintVertical_bias="0.975" />

    <EditText
        android:id="@+id/et_course_weight"
        android:layout_width="314dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Course Weight"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_course_grade"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_course_grade"
        app:layout_constraintTop_toBottomOf="@+id/et_course_grade" />

    <EditText
        android:id="@+id/et_course_id"
        android:layout_width="314dp"
        android:layout_height="45dp"
        android:layout_marginTop="256dp"
        android:ems="10"
        android:hint="Course ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_course_grade"
        android:layout_width="314dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Course Grade"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_course_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_course_id"
        app:layout_constraintTop_toBottomOf="@+id/et_course_id" />

    <TextView
        android:id="@+id/textView11"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="218dp"
        android:layout_height="32dp"
        android:layout_marginTop="120dp"
        android:text="Add your course"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>