<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="confirmClicked"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/et_course_grade"
        app:layout_constraintStart_toStartOf="@id/et_course_grade"
        app:layout_constraintTop_toBottomOf="@+id/et_course_weight" />

    <EditText
        android:id="@+id/et_course_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Course Grade"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_course_id"
        app:layout_constraintStart_toStartOf="@+id/et_course_id"
        app:layout_constraintTop_toBottomOf="@+id/et_course_id" />

    <EditText
        android:id="@+id/et_course_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Course Weight"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_course_grade"
        app:layout_constraintStart_toStartOf="@+id/et_course_grade"
        app:layout_constraintTop_toBottomOf="@+id/et_course_grade" />

    <EditText
        android:id="@+id/et_course_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:hint="Course ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>